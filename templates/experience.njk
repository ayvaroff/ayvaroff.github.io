<section id="experience">
  <h2 class="section-title">Experience</h2>

  <div class="space-y-6">
    {% for experience_item in experience %}
      <div class="experience-card">
        <div class="flex gap-4 items-start">
          {% if experience_item.logo_base64 %}
            <img src={{ experience_item.logo_base64 }} alt={{ experience_item.company }} class="h-12 w-12 object-contain rounded-md mt-1 hidden sm:block"/>
          {% else %}
            <div class="placeholder-logo">
              <div class="w-6 h-6">{{ icons_svg.common.placeholder_logo | safe }}</div>
            </div>
          {% endif %}

          <div class="flex-1">
            <div class="flex justify-between items-start">
              <div>
                <h3 class="text-[var(--indigo-dye)] text-md font-semibold">{{ experience_item.title }}</h3>
                <p class="text-[var(--caribbean-current)] text-xs font-medium">{{ experience_item.company }}</p>
                <p class="text-[var(--caribbean-current)] text-xs font-medium">{{ experience_item.location }}</p>
              </div>
              <p class="text-[var(--jet)] text-xs font-normal">{{ experience_item.dates }}</p>
            </div>
            <p class="text-[var(--jet)] text-sm font-normal mt-2 leading-relaxed">
              {{ experience_item.description | striptags(true) | escape | nl2br }}
            </p>

            {% if experience_item.stack and experience_item.stack.length > 0 %}
              <div class="mt-3">
                <h4 class="text-[var(--indigo-dye)] text-xs font-semibold mb-1.5">Stack:</h4>
                <div class="flex gap-1.5 flex-wrap">
                  {% for stack in experience_item.stack %}
                    <span class="skill-badge !h-6 !text-xs !px-2">{{ stack }}</span>
                  {% endfor %}
                </div>
              </div>
            {% endif %}

          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>
