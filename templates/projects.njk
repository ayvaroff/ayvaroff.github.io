<section id="projects">
  <h2 class="section-title">Projects</h2>

  <div class="space-y-6">
    {% for project in projects %}
      <div class="project-card">
        <div class="flex justify-between items-start">
          <div>
            <h3 class="text-[var(--indigo-dye)] text-md font-semibold">{{ project.name }}</h3>

            {% if project.source_code_link %}
              <a href="{{ project.source_code_link }}" target="_blank" rel="noopener" class="text-[var(--caribbean-current)] text-xs font-medium hover:underline">
                View on GitHub
              </a>
            {% endif %}
          </div>

          {% if project.link %}
            <a href="{{ project.link }}" target="_blank" rel="noopener" class="inline-flex items-center px-2.5 py-1 border border-transparent text-xs font-medium rounded-md text-[var(--white)] bg-[var(--caribbean-current)] hover:bg-[var(--indigo-dye)] transition-colors">
              View Project
            </a>
          {% endif %}
        </div>
        <p class="text-[var(--jet)] text-sm font-normal mt-2 leading-relaxed">{{ project.description }}</p>

        {% if project.stack and project.stack.length > 0 %}
          <div class="mt-3">
            <h4 class="text-[var(--indigo-dye)] text-xs font-semibold mb-1.5">Stack:</h4>
            <div class="flex gap-1.5 flex-wrap">
              {% for stack in project.stack %}
                <span class="skill-badge !h-6 !text-xs !px-2">{{ stack }}</span>
              {% endfor %}
            </div>
          </div>
        {% endif %}

      </div>
    {% endfor %}
  </div>
</section>
